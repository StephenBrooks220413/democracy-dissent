<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header') -%>
<body>

<!--Navbar-->
<%- include('layouts/navbar') -%>
<!-- Navbar -->


<div class="container p-5">
    <!-- Material form contact -->
    <div class="card">

        <!--Card content-->
        <div class="card-body px-lg-5 pt-0">
            <h1 class="mt-3 mb-3">New Project</h1>

            <!-- Form -->
            <form class="text-center" style="color: #757575;" action="/project/store" method="post" enctype="multipart/form-data">

                <!-- Name -->
                <div class="md-form mt-3">
                    <input type="text" name="title" placeholder="Project Title" id="materialContactFormName" class="form-control">

                </div>

                <!-- E-mail -->
                <div class="md-form mt-3">
                    <input type="email" name="email" placeholder="Your Email" id="materialContactFormEmail" class="form-control">
                </div>

                <!--image-->
                <div class="md-form mt-3">
                    <input type="file" name="image" id="image" class="form-control" accept="image/*">
                </div>

                <!--Message-->
                <div class="md-form mt-3 mb-3">
                    <textarea id="message" placeholder="Describe the project between 25 and 115 characters" name="message" maxlength="115" minlength="25" class="form-control md-textarea" rows="7"></textarea>
                </div>

                <!-- Send button -->
                <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit">Send</button>

            </form>
            <!-- Form -->

        </div>

    </div>
    <!-- Material form contact -->
</div>

<!-- Footer -->
<%- include('layouts/footer') -%>
<!-- Footer -->

<%- include('layouts/scripts') -%>

</body>
</html>
